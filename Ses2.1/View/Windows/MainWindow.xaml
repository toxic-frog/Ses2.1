<Window x:Class="Ses2._1.View.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ses2._1.View.Windows"
        mc:Ignorable="d"
        Title="Окно авторизации" MinHeight="300" MinWidth="400"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин:" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="Пароль:" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <TextBox Name="LoginTb" Grid.Column="1" Margin="10"/>
        <PasswordBox Name="PasswordTb" Grid.Row="1" Grid.Column="1" Margin="10"/>

        <Button Name="LogBtn" Grid.Column="1" Grid.Row="4" Content="Войти" Click="LogBtn_Click" Margin="10"/>
    </Grid>
</Window>
